@model Litium.Accelerator.ViewModels.Block.HeroBannerBlockViewModel

<div class="hero hero--block" style="background-image: url(@(Model.Image?.GetUrlToImage(new System.Drawing.Size(0, 0), new System.Drawing.Size(0, 0))?.Url))">
    <div class="row hero-content--block">
        <h1 class="hero-content__title--block">@Model.Title</h1>
        <a href="@Model.LinkUrl" class="hero-content__btn">@Model.ActionText</a>
    </div>
    <div class="hero__overlay"></div>
</div>


